@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider IsDarkMode="_isDarkMode"/>
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />


<MudLayout Style="width: 100vw !important; height: 100vh !important; overflow: hidden">
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">Conservices Status</MudText>
        <MudSpacer />
        <MudSwitch @bind-Value="_isDarkMode" ThumbIcon="@(_isDarkMode ? Icons.Material.Filled.DarkMode : Icons.Material.Filled.LightMode)" ThumbIconColor="@(_isDarkMode ? Color.Success : Color.Error)"/>
    </MudAppBar>
    <MudMainContent Style="width: 100% !important; height: 100% !important; display: flex; overflow-x: scroll">
        <div style="flex-grow: 1; padding: 1rem;">
            @Body
        </div>
    </MudMainContent>
</MudLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code{

    private bool _isDarkMode;

}